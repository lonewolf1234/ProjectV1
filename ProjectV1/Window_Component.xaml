<Window x:Class="ProjectV1.Window_Component"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectV1"
        mc:Ignorable="d"
        Title="Create Component" Height="450" Width="800">
    
    <Grid Margin="0,0,0,259">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label Content="Entity Name" HorizontalAlignment="Right" Margin="132,43,0,0" VerticalAlignment="Top"/>
            <Label Content="Behavioural Name" HorizontalAlignment="Right" Margin="132,43,0,0" VerticalAlignment="Top"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBox  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="132,43,0,0" Width="300" Background="WhiteSmoke"/>
            <TextBox  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="132,43,0,0" Width="300" Background="WhiteSmoke"/>
        </StackPanel>

        <!-- Try to use stack pannel to create the order of feilds-->
        

    </Grid>
</Window>
